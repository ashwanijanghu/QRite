<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true" >
            <shape>
                <gradient
                    android:startColor="@color/accent_material_dark"
                    android:endColor="@color/accent_material_dark"
                    android:angle="270" />
                <stroke
                    android:width="1dp"
                    android:color="@color/accent_material_dark" />
                <corners
                    android:radius="2dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>

        <item android:state_focused="true" >
            <shape>
                <gradient
                    android:endColor="@color/accent_material_dark"
                    android:startColor="@color/accent_material_dark"
                    android:angle="270" />
                <stroke
                    android:width="3dp"
                    android:color="@color/button_material_dark" />
                <corners
                    android:radius="3dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>

        <item>
            <shape>
                <gradient
                    android:endColor="@color/material_deep_teal_500"
                    android:startColor="@color/material_deep_teal_500"
                    android:angle="270" />
                <stroke
                    android:width="1dp"
                    android:color="@color/material_deep_teal_500" />
                <corners
                    android:radius="2dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>

    
</selector>